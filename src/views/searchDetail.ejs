<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FUTA</title>
    <link rel="stylesheet" href="/style.css">
    <!-- <script src="/src/Search.js" defer></script> -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> -->
</head>

<body>
    <div class="topnav">
        <a class="active" href="/Home/Neo4j">HomeNeo</a>

    </div>

    <section>
        <nav>
            <h1>List of seat:</h1>
            <br>
            <div class="grid-container">
                <% sea.forEach(function(item) { %>
                    <div class="grid-item" data-seat="<%= item.seat.IDSeat %>">
                        <p class="lead">
                            <%= item.seat.IDSeat %>
                        </p>
                        <p class="lead">
                            <%= item.seat.status %>
                        </p>
                    </div>
                    <% }); %>
            </div>
        </nav>

        <article>
            <h1>List of stop:</h1>
            <br>
            <% sch.forEach(function(item) { %>
                <div class="jumbotron jumbotron-fluid">
                    <div class="container">
                        <h1 class="display-4"> Stop: <%= item.stop.stop %>
                        </h1>
                        <p class="lead">Detail: <%= item.stop.stop_detail %>
                        </p>
                    </div>
                </div>
                <% }); %>
        </article>
    </section>
    <script>
        // Lặp qua từng ô và kiểm tra trạng thái
        document.querySelectorAll('.grid-item').forEach(item => {
            const status = item.querySelector('.lead:nth-child(2)').textContent.trim();
            if (status === 'Booked') {
                item.style.backgroundColor = '#65901b'; // Đổi màu nền của ô thành đỏ
                item.style.color = '#eee';
            }
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>

</html>